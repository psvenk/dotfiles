#!/bin/sh
for dir in ~/src/aur/*
do
	pkg="$(basename "$dir")"
	if [ "$pkg" = "mine" ] || [ "$pkg" = "not-installed" ] || \
		[ "$pkg" = "mathematica" ]
	# I cannot update Mathematica without a license for the new version
	then
		continue
	fi
	cd "$dir" || continue

	git fetch >/dev/null
	if [ "$(git rev-parse HEAD)" != "$(git rev-parse '@{u}')" ]
	# https://stackoverflow.com/a/17938274
	then
		printf "%s\n" "$pkg"
	fi
done
