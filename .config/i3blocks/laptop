# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

[volume-pipewire]
command=$SCRIPT_DIR/volume-pipewire
interval=once
signal=1

[aurcheck]
command=$SCRIPT_DIR/aurcheck
interval=3600

[iface]
command=$SCRIPT_DIR/iface
color=#00FF00
interval=10

[load]
command=$SCRIPT_DIR/load_average
label=Load: 
interval=10

[memory]
command=$SCRIPT_DIR/memory
label=MEM 
interval=30

[swap]
command=$SCRIPT_DIR/memory
label=SWAP 
instance=swap
interval=30

[weather]
command=$SCRIPT_DIR/weather
color=#A4C2F4
interval=1800

[battery2]
command=$SCRIPT_DIR/battery2
markup=pango
interval=30

[calendar]
command=$SCRIPT_DIR/calendar
interval=3600
DATEFMT=+%a %Y-%m-%d
SHORTFMT=+%a %Y-%m-%d
HEIGHT=180
WIDTH=220

[time]
command=$SCRIPT_DIR/time
interval=1
STRFTIME_FORMAT=%H:%M:%S
TZONES=$DEFAULT_TZ,Asia/Kolkata,Etc/UTC
TZ_LABELS=,India,UTC

# vim: set ft=dosini:
